{{ include('FuentesWorksNickelTrackerBundle:Layout:header.html.twig') }}
{{ include('FuentesWorksNickelTrackerBundle:Layout:sidebar.html.twig', {'active': 'transaction', 'accounts': accounts, 'categories': categories}) }}

<!-- start: content -->
<div class="col-xs-12 col-sm-9">
    <h1 class="page-header">New Transaction</h1>

    {% if msg is defined %}
        <div class="alert alert-dismissable alert-{{ msg.type }}">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            {{ msg.text|raw }}
        </div>
    {% endif %}

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4 class="panel-title">
                <span class="glyphicon glyphicon-plus"></span> New Income</a>
            </h4>
        </div>
        <div class="panel-body">
            <form class="form-horizontal" role="form"
                  action="{{ path('fuentesworks_nickeltracker_new_income_process') }}"
                  method="post">
                <div class="form-group">
                    <div class="col-lg-12">
                        <select class="form-control input-md" name="accountId">
                            <option value="0" selected>-- Account --</option>
                            {% for account in accounts %}
                                <option value="{{ account.accountId }}">{{ account.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                {#
                <div class="form-group">
                    <div class="col-lg-12">
                        <select class="form-control input-md" name="categoryId">
                            <option value="0" selected>-- Category --</option>
                            {% for category in categories %}
                                <option value="{{ category.categoryId }}">{{ category.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                #}
                <div class="form-group">
                    <div class="col-lg-12">
                        <input type="text" class="form-control" id="description" name="description"
                               placeholder="Description" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12">
                        <textarea class="form-control input-md" name="details" rows="2"
                                  placeholder="Details"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12">
                        <div class="input-group input-group-md">
                            <span class="input-group-addon">$</span>
                            <input type="number" class="form-control" name="amount" placeholder="Amount" required>
                            <span class="input-group-addon">.00</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12">
                        <div class="input-group input-group-md">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                            <input type="date" class="form-control" name="date" placeholder="DD-MM-YYYY" required>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12">
                        <button id="btn-save" type="submit" class="btn btn-primary btn-block btn-sm"><span id="btn-save-text">Save!</span></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- end: content -->

