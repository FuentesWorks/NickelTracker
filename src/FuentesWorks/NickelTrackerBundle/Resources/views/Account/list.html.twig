{{ include('FuentesWorksNickelTrackerBundle:Layout:header.html.twig') }}
{{ include('FuentesWorksNickelTrackerBundle:Layout:sidebar.html.twig', {'active': 'accounts'}) }}

<!-- start: content -->
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1 class="sub-header">Accounts</h1>

    {% if msg is defined %}
        <div class="alert alert-dismissable alert-{{ msg.type }}">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            {{ msg.text|raw }}
        </div>
    {% endif %}

    <!-- start: accounts list -->
    {% if accounts %}
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Type</th>
                    <th>Name</th>
                    <th>Balance</th>
                </tr>
                </thead>
                <tbody>
                {% for account in accounts %}
                <tr>
                    <td>
                        {% if account.type == 'D' %}
                            Debit
                        {% elseif account.type == 'C' %}
                            Credit
                        {% elseif account.type == 'S' %}
                            Savings
                        {% elseif account.type == 'M' %}
                            Cash
                        {% endif %}
                    </td>
                    <td>{{ account.name }}</td>
                    <td>{{ account.calculateBalance() }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <p class="text-center">no accounts found</p>
    {% endif %}
    <!-- end: transaction list -->
</div>
<!-- end: content -->

